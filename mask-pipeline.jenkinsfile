pipeline {
    agent { label 'devops' }

    environment {
        REPO_URL = 'https://github.com/nick-mathison/my-database-changes.git'
        DCT_CLI = '/root/dct-toolkit'
        LIQUIBASE_CLI = 'liquibase'
        DB_URL = 'jdbc:postgresql://10.160.1.74:5444/delphixdb'
        DB_USER = 'delphix'
        DB_PASS = 'delphix'
        CHANGE_FILE = 'my-database-changes.sql'
        SNAPSHOT_REF = 'prior-snapshot.json'
        SLACK_WEBHOOK = credentials('slack-webhook')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Refresh VDB') {
            steps {
                sh """
                ${DCT_CLI} refresh_vdb_by_snapshot vdb_id=Postgres_MASK
                """
            }
        }

        stage('Create Liquibase Snapshot') {
            steps {
                sh """
                ${LIQUIBASE_CLI} \
                  --url=${DB_URL} \
                  --username=${DB_USER} --password=${DB_PASS} \
                  snapshot --snapshot-format=JSON --output-file=${SNAPSHOT_REF}
                """
            }
        }

        stage('Liquibase Update') {
            steps {
                sh """
                ${LIQUIBASE_CLI} \
                  --url=${DB_URL} \
                  --username=${DB_USER} --password=${DB_PASS} \
                  --changeLogFile=${CHANGE_FILE} \
                  update
                """
            }
        }

        stage('Diff Snapshot vs Current DB') {
            steps {
                sh """
                ${LIQUIBASE_CLI} \
                  --reference-url="offline:postgres?snapshot="${SNAPSHOT_REF} \
                  --url=${DB_URL} \
                  --username=${DB_USER} --password=${DB_PASS} \
                  diff > diff.txt || true
                cat diff.txt
                """
            }
        }

        stage('Run Dummy Tests if Changes Detected') {
            when {
                expression {
                    return fileExists('diff.txt') && readFile('diff.txt').contains("Differences Found")
                }
            }
            steps {
                script {
                    echo "Changes detected. Running dummy integration tests..."
                    def testPassed = new Random().nextBoolean()

                    if (testPassed) {
                        slackNotify(":white_check_mark: Dummy integration tests PASSED after changes to Postgres_MASK.")
                    } else {
                        slackNotify(":x: Dummy integration tests FAILED after changes to Postgres_MASK.")
                        error("Dummy integration test failure")
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                slackNotify(":white_check_mark: Pipeline SUCCEEDED for Postgres_MASK.")
            }
        }
        failure {
            script {
                slackNotify(":x: Pipeline FAILED for Postgres_MASK.")
            }
        }
    }
}

def slackNotify(String message) {
    sh """
    curl -X POST -H 'Content-type: application/json' \
         --data '{"text": "${message}"}' ${SLACK_WEBHOOK}
    """
}